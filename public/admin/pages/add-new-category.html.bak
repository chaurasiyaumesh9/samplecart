<!doctype html>
<html lang="en">
 <head>
  <meta charset="UTF-8">
 
  <title> Add New Category </title>
  		
 </head>
 <body>
 	<div class="container">
 		<div class="jumbotron text-center">
 			 <h1> Add new Category </h1>
 		</div>
 	</div>
	
	<div class="container">
		<div class="alert alert-success" ng-show="success">
		  <strong>Success!</strong> New Category Added Successfully!
		</div>
		<form ng-submit="addNewCategory()" method="POST" role="form">
			<div class="form-group">
				<label for="name"> Category Name : </label>
				<input type="text" name="name" id="name" class="form-control" ng-model="category.name">
			</div>
			<div class="form-group">
				<label for="keywords"> keywords : </label>
				<textarea rows="5" columns="125" name="keywords" id="keywords" class="form-control" ng-model="category.keywords"></textarea>
			</div>
			<div class="form-group">
				<label for="active"> Active </label>
				<select name="active" id="active" class="form-control" ng-model="category.active">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</select>
			</div>
			
			<button type="submit" class="btn btn-default"> Submit </button>
			<a href="#categories">Go Back</a>
		</form>
	</div>
	
		 		
	 

 </body>
</html>
