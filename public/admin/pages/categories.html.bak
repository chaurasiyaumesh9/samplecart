<!doctype html>
<html lang="en">
 <head>
  <meta charset="UTF-8">
 
  <title> Categories </title>
	
 </head>
 <body>
 	<div class="container">
 		<div class="jumbotron text-center">
 			 <h1> {{ message }} </h1>
 		</div>
 	</div>
	
	<div class="container">
		<div class="alert alert-danger" ng-show="deletionSuccess">
		  <strong>{{ deleteCount }}</strong> Record(s) deleted successfully!
		</div>
		<table class="table table-stripped">
			<thead>
				<tr>
					<th> Category Name </th>
					<th> <input type="checkbox" ng-model="selectAll" ng-click="checkAll()"  /> </th>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="category in categories">
					<td> {{ category.name }} </td>
					<td> <input type="checkbox" ng-model="category.selected" ng-click="checkIndividual( category )" /> </td>
				 </tr>
			 </tbody>
		</table>
	</div>
	 		
	 <div class="container">
	 	<a class="btn btn-primary" href="#/categories/add-new">
	 		Add New Category
	 	</a>
		<button class="btn btn-danger" ng-disabled="!showDelete" ng-click="deleteCategories()"> Delete Categorie(s) </button>
	 </div>

 </body>
</html>
